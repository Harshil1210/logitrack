# Database
DATABASE_URL=mongodb://admin:password@localhost:27017/logitrack?authSource=admin
DATABASE_AUTH_URL=mongodb://admin:password@localhost:27017/logitrack_auth?authSource=admin
DATABASE_ORDER_URL=mongodb://admin:password@localhost:27017/logitrack_orders?authSource=admin
DATABASE_NOTIFICATION_URL=mongodb://admin:password@localhost:27017/logitrack_notifications?authSource=admin

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# AWS S3
AWS_ACCESS_KEY=your-aws-access-key
AWS_SECRET_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket-name

# AWS SQS
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/your-queue
SQS_ACCESS_KEY=your-sqs-access-key
SQS_SECRET_KEY=your-sqs-secret-key
SQS_REGION=us-east-1

# SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Service Ports
AUTH_SERVICE_PORT=3001
ORDER_SERVICE_PORT=3002
NOTIFICATION_SERVICE_PORT=3003
API_GATEWAY_PORT=3000